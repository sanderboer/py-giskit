{
  "name": "Site Underlegger - BAG + BRK + BGT + BAG3D",
  "description": "Complete Dutch site base map with buildings (BAG), parcels (BRK), topography (BGT), and 3D models (BAG3D)",
  "location": {
    "type": "address",
    "value": "Curieweg 7a, Spijkenisse, Netherlands",
    "radius": 100.0,
    "crs": "EPSG:4326"
  },
  "datasets": [
    {
      "provider": "pdok",
      "service": "bag",
      "layers": ["pand", "verblijfsobject"],
      "temporal": "latest"
    },
    {
      "provider": "pdok",
      "service": "brk",
      "layers": ["perceel", "kadastrale_grens", "bebouwing", "nummeraanduiding", "openbare_ruimte"],
      "temporal": "latest"
    },
    {
      "provider": "pdok",
      "service": "bag3d",
      "layers": ["lod22"],
      "temporal": "latest"
    },
    {
      "provider": "pdok",
      "service": "bgt",
      "layers": [
        "wegdeel",
        "waterdeel",
        "begroeidterreindeel",
        "onbegroeidterreindeel",
        "ondersteunendwegdeel"
      ],
      "temporal": "latest"
    }
  ],
  "output": {
    "path": "site_underlegger.gpkg",
    "format": "gpkg",
    "crs": "EPSG:28992",
    "overwrite": true,
    "layer_prefix": "",
    "ifc_export": {
      "path": "site_underlegger.ifc",
      "ifc_version": "IFC4X3_ADD2",
      "normalize_z": true
    }
  }
}
