# Include config files
recursive-include giskit/config *.yml *.yaml

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include example recipes
recursive-include recipes *.json
include recipes/README.md

# Include examples
recursive-include examples *.py *.json *.sh
include examples/README.md

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
global-exclude *.gpkg
global-exclude *.ifc
global-exclude *.glb
